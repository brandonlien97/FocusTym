<body>
	<div class="container">
	<a href="/"><button class="btn"><i class="fa fa-arrow-alt-circle-left"></i>Logout</button></a> 
			{{>header}}
			
		<h1>FocusTym</h1>
		<hr class=a>
		<div>
			<div style="width: 100%; display: table;">
				<a id="add" href="/add">
		    	<button class="btn">
					<div style="width: 100%; display: table;">
					<div class="btn btn-default friends" style="display: table-row">
		       		New Group 
					<i class="fas fa-plus"></i>
		       
		        	</div>
		    		</div> 
		    	</button>
		    	<a id="add" href="/joinGroup">
		    	<button class="btn">
					<div style="width: 100%; display: table;">
					<div class="btn btn-default friends" style="display: table-row">
		       		Join Group 
					<i class="fas fa-plus"></i>
		       
		        	</div>
		    		</div> 
		    	</button>
				</a>

		   		{{#each groups}}
				<hr>
				<a href="/topics/{{name}}" id="{{name}}">
					<button class="btn btn-default" style="width:90%; display: table-row" >
		      	     {{name}}
				
		   			</button>
		   		
						<a href="/delete/{{name}}" id="delete" style="width:10% "; >
		        			<button class="btn" id="delete">
		        				<i class="fas fa-trash-alt"></i>
		        			</button>
		      			</a>
		        </a>

		    	{{/each}}
			</div>
		</div>

				
	</div>
	<script src="/js/jquery-1.11.0.js"></script>
