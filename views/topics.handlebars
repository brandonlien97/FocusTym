<body>
	<div class="container">
 		<h1>  </h1>
		<a href="/index"><button class="btn"><i class="fa fa-arrow-alt-circle-left"></i> Go Back</button></a> 
		{{>header}}
		
		<h1>{{name}}</h1>

		
		<hr class=a>
		<div>	
			<div style="width: 100%; display: table;">
			
			<a id="addTask" href="/addTask_B/{{name}}">
		    	<button class="btn">
					<div style="width: 100%; display: table;">
					<div class="btn friends" style="display: table-row">
		       		Add Topic 
					<i class="fas fa-plus"></i>
		       
		        	</div>
		    		</div> 
		    	</button>
			</a>

			{{#each topics}}
			<div id="{{@index}}" class="btn" style="width: 100%; display: table;">
		   
				<text id="topic_{{@index}}">{{topic}}</text><text style='margin-left: 30px'>        </text><text id="timeconvert_{{@index}}"></text><noscript id="time_{{@index}}">{{time}}</noscript>

				
				<script type="text/javascript">
					var time = document.getElementById("time_{{@index}}").innerHTML;
					
					convert(time);


					function convert(time) {
						var tim = convertSeconds(time);
						document.getElementById('timeconvert_{{@index}}').innerHTML = tim;
					}

					function convertSeconds(s) {
						console.log(s);
			
						var min = Math.floor(s / 60);
						var sec = s % 60;
						if (min < 10) {
							if (sec < 10) {
								return '0' + min + ':' + '0' + sec;
							}
							else {
								return '0' + min + ':' + sec;
							}
						}
						else {
							if (sec < 10) {
								return min + ':' + '0' + sec;
							}
							else {
								return min + ':' + sec;
							}
						}
					}


				</script>
				
		        {{#if priority}}
		        <a id="like" href="/sort/{{topic}}">
				 	<button class="btn" id="like">
		        		<i class="glyphicon glyphicon-circle-arrow-up" style='color:blue'></i>
		        	</button>
		        </a>
		        <font size='1' color='blue'>{{priority}} priority</font>
                	{{else}}

		        <a id="like" href="/sort/{{topic}}">
				 	<button class="btn" id="like">
		        		<i class="glyphicon glyphicon-circle-arrow-up"></i>
		        	</button> priority
		        </a>
		        {{/if}}
				
			<a id="delete" href="/deleteTask/{{topic}}">
		        	<button class="btn" id="delete">
		        		<i class="fas fa-trash-alt"></i>
		        	</button>
		      	</a>

		        <a id="edit" href="/editTask_B/{{topic}}">
		        	<button class="btn" id="editTask">
		           		<i class="fa fa-edit"></i>
		        	</button>
		        </a>
		        
		   </div>
		    {{/each}}
		    
		</div>
			</hr>



	
		<div>

			
			Current Topic: <text id="currectTopic"></text>
		</div>

		<!-- The "Time Goes Here" gets replaced by the javascript timer in focusTym.js -->
		<p id="timer"></p>
		
		<div id="overlay">
			<div class="over">
				<div id="text">Ready to continue?</div>
				<dix><button class="btn" id="snoz"">Snooze</button><button class="btn" id="nextTopicS">Next topic</button></dix>
			</div>
		</div>
		
	
		<button class="btn" id="play"><i class="fa fa-play"></i></button><button class="btn" id="pause"><i class="fa fa-pause"></i></button><a ><button class="btn" id="nextTopic"">Next topic</button></a>
				
	</div>
	<script src="/js/jquery-1.11.0.js"></script>
	<script src="/js/bootstrap.js"></script>
	<script src="/js/focusTym.js"></script>

	<script src="/js/bootstrap-slider.js"></script>
</body>
</html>
